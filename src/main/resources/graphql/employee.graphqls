type Query {
  employees: [Employee]
  employeeById(employeeId: ID!): Employee
}

type Mutation {
  addEmployee(input: EmployeeInput!): Employee
  updateEmployee(id: ID!, input: EmployeeInput!): Employee
  deleteEmployee(id: ID!): Boolean
}

type Employee {
  id: ID!
  name: String!
  position: String!
  department: String!
}

input EmployeeInput {
  name: String!
  position: String!
  department: String!
}
